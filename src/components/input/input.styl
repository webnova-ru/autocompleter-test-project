$colorInputBorder = hsl(0, 0%, 90%)

.root
    position: relative
    height: 30px

.input
    width: 100%
    height: 100%
    padding: 2px
    box-sizing: border-box
    font-size: 20px
    color: $colorLightBlack
    border: 2px solid $colorInputBorder
    appearance: none
    outline: 0

    &::-ms-clear
    &::-ms-reveal
        display: none

    &:focus
    &:active
        border: 2px solid darken($colorInputBorder, 10%)


    &::-webkit-input-placeholder
    &::-moz-placeholder
    &:-ms-input-placeholder
        color: $colorPlaceholder

    &::-moz-placeholder
        opacity: 1
