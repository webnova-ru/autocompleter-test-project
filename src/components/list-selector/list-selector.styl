.root
    list-style: none
    margin: 0
    padding: 0
    background-color: $colorWhite
    font-family: Arial, Helvetica, sans-serif
    box-shadow: 0 1px 5px #ccc

.item
    padding: 5px
    border-bottom: 1px solid hsl(0,0, 95%)
    color: $colorLightBlack
    cursor: pointer

    &:last-child
        border-bottom: 0

    &_active
        background-color: $colorYellow

.subtext
    font-weight: bold
    color: $colorBlack
